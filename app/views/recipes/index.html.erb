<main role="main">
  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        <% @resipies.each do |recipe| %>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <div class="card-body">
                <p class="lead"><%= recipe.title %></p>
                <p class="card-text">
                  <img src="http:<%= recipe.photo.url(width: 300, height: 600, format: 'jpg', quality: 100) %>">
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to "View", recipe_path(recipe.id) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</main>
